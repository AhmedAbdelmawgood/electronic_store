<%=form_for @product do |f|%>
		
	<%if @product.errors.any? %>
	<div class="alert alert-danger">
		<ul>
		<%@product.errors.full_messages.each do |msg|%>
			<li ><%=msg%></li>
		<%end%>
		</ul>
	</div>
	<%end%>
	<div class="form-group">
		<%=f.label 'Name'%>
		<%=f.text_field :name, class:'form-control'%>
	</div>
	<div class="form-group">
		<%=f.label 'Price'%>
		<%=f.number_field :price, class:'form-control', placeholder:'$$$'%>
	</div>
	<div class="form-group">
		<%=f.label 'quantity'%>
		<%=f.number_field :quantity, class:'form-control', placeholder:'Number'%>
	</div>	
	<div class="form-group">
		<%=f.label 'Company'%>
		<%=f.text_field :company, class:'form-control', placeholder:'Company Name'%>
	</div>
	<div class="form-group">
		<%=f.label 'Description'%>
		<%=f.text_area :product_description, class:'form-control'%>
	</div>
	<div class="form-group">
		<%=f.label 'Information'%>
		<%=f.text_area :product_information, class:'form-control'%>
	</div>		
	<div class="form-group">
		<%=f.label 'Category'%>
		<%=f.select :category,map_hash_to_select(Product.categories), class:'form-control'%>
	</div>
	<%=f.submit 'Create Mission', class:'btn btn-success'%>
<%end%>
